#
# Monit control file
#

set daemon 30 # Poll at 1/2-minute intervals
set logfile /etc/monitrc.log
set idfile /tmp/id
set statefile /tmp/state
set httpd port 8103
   allow test:test
   
check system local
   if memory usage > 75% then alert
   if cpu usage (system) > 85% then alert

check network eth0
   with interface "eth0"
   if failed link for 4 times within 5 cycles then alert
   if changed link capacity then alert
   if saturation > 50% then alert
   if total download > 1000 GB in last 2 hours then alert

#
# Process
#

check process eureka_docker with matching "DiscoveryServer-0.0.1-SNAPSHOT.war"
   group support   
   start program = "/etc/EGA_eureka/eurekad.sh start"
   stop program = "/etc/EGA_eureka/eurekad.sh stop"
   if not exist then start
 
